<tr id="comment-<%= comment.id %>">
  <td style="width: 60px">
    <%= image_tag comment.user.avatar.url, class: 'rounded-circle', width: '50', height: '50' %>
  </td>
  <td>
    <h3 class="small"><%= comment.user.name %> </h3>
      <p><%= simple_format(comment.body) %></p>
      <%= image_tag comment.comment_image.url, width: '100' if comment.comment_image.present? %>
  </td>
  <% if current_user.own?(comment) %>
    <td class="action">
      <ul class="list-inline justify-content-center" style="float: right;">
        <li class="list-inline-item">
          <%= link_to '#', class: 'edit-comment-link' do %>
            編集
          <% end %>
        </li>
        <li class="list-inline-item">
          <%= link_to comment_path(comment), class: "delete-comment-link", data: { turbo_method: :delete, turbo_confirm: t('comments.delete.comfirm') } do %>
            削除
          <% end %>
        </li>
      </ul>
    </td>
  <% end %>
</tr>
