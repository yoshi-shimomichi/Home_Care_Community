<div class="col-sm-12 col-xl-4 mb-3">
  <div id="post-id-<%= post.id %>">
    <div class='card mb-3'>
      <%= link_to '#', class: 'stretched-link' do %>
      <div class="card-body">
        <div class="d-flex">
          <ul class="list-inline">
            <li><i class="bi bi-person"></i><%= post.user.name %></li>
            <li><i class="bi bi-calendar"></i><%= l post.created_at, format: :short %></li>
          </ul>
          <div class='ms-auto'>
            <%= link_to '#', id: 'button-edit-#{post.id}' do %>
              <i class="fas fa-pen"></i>
            <% end %>
            <%= link_to '#', id: 'button-delete-#{post.id}', method: :delete, data: {confirm: ''} do %>
              <i class="fas fa-trash"></i>
            <% end %>
          </div>
        </div>
        <p class="card-text"><%= post.body %></p>
      </div>
      <% end %>
    </div>
  </div>
</div>
