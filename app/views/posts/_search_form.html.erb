<div class="row mb-5">
  <div class="col-lg-10 offset-lg-1">
    <%= form_with url: search_posts_path, local: true, method: :get do |f| %>
      <div class="row">
        <div class='form-group col-sm-6'>
        <%= f.text_field :keyword, class: 'form-control col-sm-3', placeholder: "本文・タグからキーワード検索" %>
        </div>
        <div class='form-group col-sm-3'>
          <%= f.collection_select :post_type, 
                                  [['質問', 0], ['つぶやき', 1]], 
                                  :last, 
                                  :first,
                                  { include_blank: '質問・つぶやき' }, 
                                  { class: 'form-control' } %>
        </div>
        <div class="form-group col-sm-3">
          <%= f.submit "検索"%>  
        </div>
      </div>
    <% end %>
  </div>
</div>