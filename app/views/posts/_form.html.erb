<%= form_with model: @post, id: 'new_post' do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="mb-3">
      <%= f.radio_button :post_type, :question %>
      <%= f.label :post_type_question, "質問", class: "" %>
      <%= f.radio_button :post_type, :tweet %>
      <%= f.label :post_type_tweet, "つぶやき", class: "" %>
      <%= f.submit '投稿', class: "btn btn-primary float-end" %>
    </div>
    <div class="mb-3">
      <%= f.label :body %>
      <%= f.text_area :body, class: "form-control", row: "10", style: "height: 200px" %>
    </div>
    <div class="mb-3">
      <%= f.label :name %>
      <%= f.text_field :name, value: @tag_list, class: 'form-control'%>
    </div>
    <div class="mb-3">
      <%= f.label :post_image %>
      <%= f.file_field :post_image, class: "form-control", accept: 'image/*' %>
      <%= f.hidden_field :post_image_cache %>
    </div>
    <div id="previews"></div>
  
  <% end %>