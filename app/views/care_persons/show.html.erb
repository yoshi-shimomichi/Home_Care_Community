<% content_for(:title, t('.title')) %>
<div class="row">
<div class="col-2">
<%= render 'shared/sideber' %>
</div>
<div class="col-9">
<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1 class="float-left mb-5"><%= t('.title') %></h1>
        <div class="row">
          <div class="col">
            <div class="row">
              <div class="col">
                <%= t(CarePerson.human_attribute_name(:age)) %>
                <%= @care_person.age if @care_person.present? %>
              </div>
            </div>
            <div class="row">
              <div class="col">
                <%= t(CarePerson.human_attribute_name(:sex)) %>
                <%= @care_person.sex if @care_person.present? %>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <%= t(CarePerson.human_attribute_name(:bio)) %>
          <div class="border bio">
            <%= care_person.bio if @care_person.present? %>
          </div>
        </div>
      <div> 
        <%= link_to t('.button'), edit_care_persons_path, class: 'btn btn-primary float-end' %>
      </div>
    </div>
  </div>
</div>
</div>