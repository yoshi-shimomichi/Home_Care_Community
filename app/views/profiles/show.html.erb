<% content_for(:title, t('.title')) %>
<div class="container pt-3">
  <div class="row">
  <div class="col-2">
    <%= render 'shared/sideber' %>
  </div>
  <div class="col-9">
  <div class="container pt-3">
    <div class="row">
      <div class="col-md-10 offset-md-1">
        <h1 class="float-left mb-5"><%= t('.title') %></h1>
          <div class="row">
            <div class="col-4">
              <%= image_tag current_user.avatar_url, class: 'rounded-circle', size: '200x200' %>
            </div>
            <div class="col">
              <div class="row">
                <div class="col">
                  <%= t(User.human_attribute_name(:name)) %>
                  <span class="bg-body-secondary"><%= current_user.name %></span>
                </div>
              </div>
              <div class="row">
                <div class="col">
                  <%= t(User.human_attribute_name(:email)) %>
                  <span class="bg-body-secondary"><%= current_user.email %></span>
                </div>
              </div>
            </div>
          </div>
          <div class="row mb-3">
            <%= t(User.human_attribute_name(:bio)) %>
            <div class="border bio bg-body-secondary">
              <%= current_user.bio %>
            </div>
          </div>
        <div> 
          <%= link_to t('.button'), edit_profile_path, class: 'btn btn-primary float-end' %>
        </div>
      </div>
    </div>
  </div>
  </div>
</div>