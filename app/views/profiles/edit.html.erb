<% content_for(:title, t('.title')) %>
<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1><%= t('.title') %></h1>
      <%= form_with model: @user, url: profile_path, method: :put do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="row">
          <div class="col-4">
            <%= image_tag @user.avatar.url,
                          class: 'rounded-circle',
                          id: 'preview',
                          size: '200x200' %>
            <%= f.file_field :avatar, class: "form-control", accept: 'image/*' %>
            <%= f.hidden_field :avatar_cache %>
          </div>
          <div class="col-8">
            <div class="row">
              <div class="col-8">
                <%= f.label :name %>
                <%= f.text_field :name, class: "form-control" %>
              </div>
            </div>
          <div class="row">
            <div class="col-12">
              <%= f.label :email %>
              <%= f.email_field :email, class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="row">
          <%= f.label :bio %>
          <%= f.text_field :bio, class: "form-control" %>
        </div>
      </div>
        <%= f.submit nil, class: "btn btn-primary float-end" %>
      <% end %>
    </div>
  </div>
</div>

